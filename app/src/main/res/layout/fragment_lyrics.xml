<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Highlight Background (Behind RecyclerView) -->
    <View
        android:id="@+id/lyrics_highlight_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="0dp"
        android:background="@drawable/shape_highlight_bg"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lyrics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingVertical="120dp"
        android:scrollbars="none"
        android:paddingHorizontal="48dp"/>

    <RelativeLayout
        android:id="@+id/lyrics_timeline_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/lyrics_timeline_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="@color/text_primary"
            android:textSize="12sp"/>

        <View
            android:id="@+id/lyrics_timeline_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_toEndOf="@id/lyrics_timeline_time"
            android:layout_toStartOf="@id/lyrics_timeline_play"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/shape_dashed_line"
            android:layerType="software"/>

        <ImageButton
            android:id="@+id/lyrics_timeline_play"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:tint="@color/text_primary"/>

    </RelativeLayout>

</FrameLayout>
